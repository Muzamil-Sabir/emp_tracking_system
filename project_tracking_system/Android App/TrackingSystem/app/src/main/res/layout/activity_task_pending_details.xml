<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task_pending_details">


    <TextView
        android:id="@+id/task_assigned_At"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_x="181dp"
        android:layout_y="383dp"
        android:text="Loading.."
        android:textSize="10pt" />

    <TextView
        android:id="@+id/task_status"
        android:layout_width="158dp"
        android:layout_height="44dp"
        android:layout_x="185dp"
        android:layout_y="284dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:gravity="center"
        android:text="Loading.."
        android:textSize="10pt" />

    <TextView
        android:id="@+id/task_reference"
        android:layout_width="163dp"
        android:layout_height="51dp"
        android:layout_x="186dp"
        android:layout_y="106dp"
        android:text="TextView"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_x="0dp"
        android:layout_y="5dp"
        android:background="@color/red"

        android:gravity="center"
        android:text="TASK DETAILS"
        android:textSize="16pt" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:layout_x="14dp"
        android:layout_y="95dp"
        android:textStyle="bold"

        android:text="Task Reference #"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="126dp"
        android:layout_height="53dp"
        android:layout_x="18dp"
        android:layout_y="189dp"
        android:text="Task tittle"
        android:textStyle="bold"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_x="19dp"
        android:layout_y="286dp"
        android:text="Task Status"
        android:textStyle="bold"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_x="21dp"
        android:layout_y="381dp"
        android:text="Assigned at"
        android:textStyle="bold"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp" />

    <Button
        android:id="@+id/submit_task"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:layout_x="80dp"
        android:layout_y="474dp"
        android:gravity="center"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Mark as Completed" />

    <TextView
        android:id="@+id/task_tittle"
        android:layout_width="165dp"
        android:layout_height="54dp"
        android:layout_x="187dp"
        android:layout_y="189dp"
        android:text="Loading.."
        android:textSize="10pt" />

</AbsoluteLayout>